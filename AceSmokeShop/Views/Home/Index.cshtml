@using AceSmokeShop.ViewModel
@model UHomeViewModel

@{
    ViewData["Title"] = "Home";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-width: 2200px; margin-bottom: 6rem;">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/HomeImg2.png" class="d-block w-100" alt="Img">
            </div>
        </div>
    </div>

    <div class="mt-4" style="padding: 2rem 8rem;">
        <div class="row">
            <div class="col-3">
                <div>
                    <div>
                        <a class="font-weight-bolder"><h1 style="font-size: 3rem; font-weight: 700; font-family: emoji; letter-spacing: -4px;">Featured Items</h1></a>
                        <div class="mt-0" style="border-bottom: 5px solid #96672d; width: 50px;"></div>
                    </div>
                    <div class="mt-2 mb-0" style="letter-spacing: -1px;">
                        <a class="font-weight-normal">Shop from out most premium <br/> brands and products.</a>
                    </div>
                    <div class="mt-2 mb-0">
                        <a href="@Url.Action("Products", "Home", new{type = "featured"})" class="font-weight-bold" style="color:#96672d;"><b>See All Featured Items</b></a>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <div class="row row-cols-4 row-cols-lg-4 g-5 g-lg-4">
                    @foreach(var item in Model.FeaturedList)
                    {
                        <div class="product-card" style="width: 245px; margin: 0rem 1.5rem;">
		                    <div class="product-tumb" style="height: 260px;">
                                <a href="@Url.Action("ProductDetails", "Home", new{productid = @item.Barcode})">
                                    <img  src="@item.PrimaryImage" alt="">
                                </a>
			                    
		                    </div>
		                    <div class="product-details" style="padding:0px;">
                                <div style="padding: 5px; min-height: 87px;">
                                    <div class="product-price">$@item.SalePrice</div>
			                        <h7>
                                        <a style="font-size: 0.8rem;font-weight: 600;letter-spacing: -0.5px;">@item.Category.CategoryName - @item.ProductName</a>
                                    </h7>
                                </div>
			                    <div class="row product-bottom-details" style="padding:0px; margin: 0px;margin-top: 10px;height: 45px;">
                                    <div class="col" style="padding: 0px;height: -webkit-fill-available;">
                                        <button class="btn" type="button" style="background-color: gray;border-radius: 0px;width: -webkit-fill-available;height: -webkit-fill-available;" 
                                        onclick="AddtoCart(@item.Barcode, 1, 'Home/Products')">Add to Cart</button>
                                    </div>
			                    </div>
		                    </div>
	                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-1" style="padding: 2rem 8rem; background-color: #D3D3D3">
        <div class="row">
            <div class="col-3">
                <div>
                    <div>
                        <a class="font-weight-bolder"><h1 style="font-size: 3rem; font-weight: 700; font-family: emoji; letter-spacing: -4px;">Popular Products</h1></a>
                        <div class="mt-0" style="border-bottom: 5px solid #96672d; width: 50px;"></div>
                    </div>
                    <div class="mt-2 mb-0" style="letter-spacing: -1px;">
                        <a class="font-weight-normal">See from our collections of the most purchasedproducts.</a>
                    </div>
                    <div class="mt-2 mb-0">
                        <a href="@Url.Action("Products", "Home", new{type = "popular"})" class="font-weight-bold" style="color:#96672d;"><b>See All Popular Products</b></a>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <div class="row row-cols-4 row-cols-lg-4 g-5 g-lg-4">
                    @foreach(var item in Model.PromotedList)
                    {
                        <div class="product-card" style="width: 245px; margin: 0rem 1.5rem;">
		                    <div class="product-tumb" style="height: 260px;">
                                <a href="@Url.Action("ProductDetails", "Home", new{productid = @item.Barcode})">
                                    <img  src="@item.PrimaryImage" alt="">
                                </a>
			                    
		                    </div>
		                    <div class="product-details" style="padding:0px;">
                                <div style="padding: 5px; min-height: 87px;">
                                    <div class="product-price">$@item.SalePrice</div>
			                        <h7>
                                        <a style="font-size: 0.8rem;font-weight: 600;letter-spacing: -0.5px;">@item.Category.CategoryName - @item.ProductName</a>
                                    </h7>
                                </div>
			                    <div class="row product-bottom-details" style="padding:0px; margin: 0px;margin-top: 10px;height: 45px;">
                                    <div class="col" style="padding: 0px;height: -webkit-fill-available;">
                                        <button class="btn" type="button" style="background-color: gray;border-radius: 0px;width: -webkit-fill-available;height: -webkit-fill-available;" 
                                        onclick="AddtoCart(@item.Barcode, 1, 'Home/Products')">Add to Cart</button>
                                    </div>
			                    </div>
		                    </div>
	                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

	<div class="mt-1" style="padding: 2rem 8rem;">
        <div class="row">
            <div class="col-3">
                <div>
                    <div>
                        <a class="font-weight-bolder"><h1 style="font-size: 3rem; font-weight: 700; font-family: emoji; letter-spacing: -4px;">Top Categories</h1></a>
                        <div class="mt-0" style="border-bottom: 5px solid #96672d; width: 50px;"></div>
                    </div>
                    <div class="mt-2 mb-0" style="letter-spacing: -1px;">
                        <a class="font-weight-normal">Choose from our top product categories</a>
                    </div>
                    <div class="mt-2 mb-0">
                        <a class="font-weight-bold" style="color:#96672d;"><b>See All Categories</b></a>
                    </div>
                </div>
            </div>
            <div class="col-9">
				<div class="row row-cols-3 row-cols-lg-3 gy-5 g-lg-4" style="padding: 0rem 1rem;">
                    @for(var i = 0; i<6; i++){
					    <div class="col" style="padding-bottom: 1rem;max-width: 283px;">
					        <div class="product-card">
						        <div class="product-tumb">
							        <img src="@Model.CategoryList[i].Image" alt="">
						        </div>
						        <div class="product-details">
							        <h7><a>@Model.CategoryList[i].CategoryName</a></h7>
						        </div>
					        </div>
				        </div>
				    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

    </script>
}

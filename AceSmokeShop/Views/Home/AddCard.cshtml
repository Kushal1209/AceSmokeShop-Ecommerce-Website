@using AceSmokeShop.ViewModel
@model PaymentCardViewModel

@{
    ViewData["Title"] = "Add Card";
    Layout = null;
}

<div class="modal fade" tabindex="-1" role="dialog" id="addcardget">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addcardgetlbl">Add Card</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true" style="border:none; outline:none">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddCard" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <label>Card Number</label>
                                <input asp-for="@Model.CardNumber" type="number" maxlength="16" id="cardInput" class="form-control" />
                                <span id="errCardNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-md-12">
                                <label>CVC</label>
                                <input asp-for="@Model.CVC" id="CVC" class="form-control" />
                                <span id="errCVC" class="text-danger"></span>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Month</label>
                                <input asp-for="@Model.Month" id="Month" class="form-control" />
                                <span id="errMonth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                 <label>Year</label>
                                <input asp-for="@Model.Year" id="Year" class="form-control" />
                                <span id="errYear" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    </script>
}

@using AceSmokeShop.ViewModel
@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    var ShippingAddress = new Addresses();
    var BillingAddrress = new Addresses();
    @foreach (var item in Model.Address.AddressList)
    {
        if (item.IsShipping)
        {
            ShippingAddress = item;
        }
        if (item.IsBilling)
        {
            BillingAddrress = item;
        }
    }

    int cardNumber = -1;
    int SelectedCard = -1;
}

<div id="placeholder"></div>
<div class="container mt-4" style="margin-bottom: 6rem;">
    <div>
        <h2 style="font-weight: 700; font-family: emoji; letter-spacing: -2px;">Select Address</h2>
        <hr/>
    </div>
    <div class="row mt-4">
        <div class="col-4">
            <div class="product-card" style="width: 330px">
		        <div class="product-details"  style="padding: 1rem 2rem;">
                    <div class="row" style="padding:0px; margin: 0px;height: 45px;">
                        <div class="col" style="padding: 0px;height: -webkit-fill-available;">
                            <a style="border-radius: 0px;width: -webkit-fill-available;height: -webkit-fill-available; font-weight:600;">Shipping Address</a>
                        </div>
			        </div>
                    @if(Model.Address.AddressList.Count() == 0)
                    {
                        <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                        </h7><br/>
                    }
                    else
                    {
                        <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@ShippingAddress.AddressLineA</a>
                    </h7><br/>
                        @if(ShippingAddress.AddressLineB != null && ShippingAddress.AddressLineB.Length > 0)
                        {
                            <h7>
                            <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@ShippingAddress.AddressLineB</a>
                            </h7><br/>
                        }
                       
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@ShippingAddress.City</a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@Model.Address.StateList[@ShippingAddress.StateID - 1].StateName @ShippingAddress.Zipcode</a>
                    </h7><br/>
                        @if (ShippingAddress.AddressLineB == null || ShippingAddress.AddressLineB.Length <= 0)
                        {
                            <br/>
                        } 
                    }  
		        </div>
	        </div>
        </div>
        <div class="col-4">
            <div class="product-card" style="width: 330px">
		        <div class="product-details"  style="padding: 1rem 2rem;">
                    <div class="row" style="padding:0px; margin: 0px;height: 45px;">
                        <div class="col" style="padding: 0px;height: -webkit-fill-available;">
                            <a style="border-radius: 0px; height:-webkit-fill-available; width:-webkit-fill-available; font-weight:600;">Billing Address</a>
                        </div>
			        </div>
			        @if(Model.Address.AddressList.Count() == 0)
                    {
                        <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;"></a>
                        </h7><br/>
                    }
                    else
                    {
                        <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@BillingAddrress.AddressLineA</a>
                    </h7><br/>
                        @if (BillingAddrress.AddressLineB != null && BillingAddrress.AddressLineB.Length > 0)
                        {
                            <h7>
                                <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@BillingAddrress.AddressLineB</a>
                            </h7><br/>
                        } 
                   
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@BillingAddrress.City</a>
                    </h7><br/>
                    <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@Model.Address.StateList[@BillingAddrress.StateID - 1].StateName @ShippingAddress.Zipcode</a>
                    </h7><br/>
                        @if (BillingAddrress.AddressLineB == null || BillingAddrress.AddressLineB.Length <= 0)
                        {
                            <br/>
                        } 
                    }  
		        </div>
	        </div>
        </div>
        <div class="col-4">
        </div>
    </div>
    <div class="mt-5">
         <div>
            <h4 style="font-weight: 600; font-family: inherit; letter-spacing: -1px;">Other Addresses</h4>
        </div>
        <div class="row row-cols-3 row-cols-lg-3 gy-5 g-lg-4">
            @foreach(var item in Model.Address.AddressList)
            {
            <div class="col" style="padding-bottom: 1rem;max-width: 283px;">
                <div class="product-card" style="width: 245px">
                    <div style="padding: 5px; text-align:-webkit-right;">
                        <a onclick="RemoveAddress(@item.Id)" style="cursor:pointer;"><i class="bi bi-x-lg"></i></a>
                    </div>
		            <div class="product-details"  style="padding: 1rem 2rem;">
			            <h7>
                            <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@item.AddressLineA,</a>
                        </h7><br/>
                        @if(item.AddressLineB != null && item.AddressLineB.Length > 0)
                        {
                        <h7>
                        <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@item.AddressLineB,</a>
                        </h7><br/>
                        }
                        <h7>
                            <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@item.City,</a>
                        </h7><br/>
                        <h7>
                            <a style="font-size: 1rem;font-weight: 400;letter-spacing: -0.5px;">@Model.Address.StateList[item.StateID - 1].StateName @item.Zipcode</a>
                        </h7><br/>
                        @if (item.AddressLineB == null || item.AddressLineB.Length <= 0)
                        {
                            <br/>
                        }
                        </div>
                    <div class="row" style="padding:0px; margin:0px; border-top:1px solid lightgray;">
                        <div class="col" style="height:-webkit-fill-available; border-right:1px solid lightgray; background-color:lightgray;">
                            @if(item.IsShipping){
                                    <button class="btn" type="button" disabled style="border-radius: 0px;width: -webkit-fill-available; height:-webkit-fill-available;">Shipping</button>
                            }
                            else
                            {
                               <button class="btn" onclick="EditAddressType('Shipping', @item.Id);" type="button" style="border-radius: 0px;width: -webkit-fill-available; height:-webkit-fill-available;padding: 8px 0px;font-size: 13px">Set As Shipping</button>
                            }         
                        </div>
                        <div class="col" style="height:-webkit-fill-available; background-color: gray;">
                            @if (item.IsBilling)
                            {
                                <button class="btn" disabled type="button" style="border-radius: 0px; color:ActiveBorder#fff; height:-webkit-fill-available; width:-webkit-fill-available;">Billing</button>

                            }
                            else
                            {
                                <button class="btn" onclick="EditAddressType('Billing', @item.Id);" type="button" style="border-radius: 0px; color:ActiveBorder#fff; height:-webkit-fill-available; width:-webkit-fill-available;padding: 8px 0px;font-size: 13px">Set As Billing</button>

                            }
                        </div>
			        </div>
	            </div>
            </div>
            }
            <div class="col" style="padding-bottom: 1rem;max-width: 283px;">
                <div class="product-card" style="width:245px; border:dashed; border-color:#96672d; height:100%;">
                    <button class="btn" type="button" style="border-radius: 0px;width: -webkit-fill-available; height:-webkit-fill-available;" data-toggle="ajax-modal" data-target="#addAddress"
                    data-url="@Url.Action("AddAddressGet")" >Add New Address</button>
	            </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <h2 style="font-weight: 700; font-family: emoji; letter-spacing: -2px;">Payments Options</h2>
        <hr/>
    </div>
    <div class="mt-4">
        <div>
            <h4 style="font-weight: 600; font-family: inherit; letter-spacing: -1px;">Select Payment Options</h4>
        </div>
        <div class="product-card" style="width:50px; border:dashed; border-color:#96672d; height:100%;">
            <button type="button" class="btn" style="border-radius: 0px;width: -webkit-fill-available; height:-webkit-fill-available;" data-toggle="ajax-modal" data-target="#addcardget"
                    data-url="@Url.Action("AddCardGet")" >+</button>
        </div>
        <div class="row mt-3 row-cols-3 row-cols-lg-3 gy-5 g-lg-4">
            <div class="col">
                <input type="hidden" asp-for=@SelectedCard value=@SelectedCard id="inputSelectCardNum"/>
                @foreach(var item in Model.PaymentMethods)
                {
                    {
                        cardNumber = cardNumber + 1;
                    }
                    <div class="col" style="padding-bottom: 1rem;">
                        <div class="product-card" onclick="SelectCard(@cardNumber, @Model.PaymentMethods.Count())" id="@("cardSelect" + cardNumber)" style="width: 380px;">
                            <div class="product-details" style="padding:1rem 2rem;">
                                <div style="text-align:-webkit-right;">
                                    <button type="button" onclick="RemoveCard(@cardNumber)" style="cursor:pointer;"><i class="bi bi-x-lg"></i></button>
                                </div>
                                <div class="d-inline">
                                    <h6>
                                        @item.Card.Last4
                                    </h6>
                                    <h6>
                                        @item.Card.Brand
                                    </h6>
                                    <h6>
                                        @item.Card.ExpMonth/@item.Card.ExpYear
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div> 
        </div>
    </div>


    <div class="mt-4">
        <h2 style="font-weight: 700; font-family: emoji; letter-spacing: -2px;">My Cart</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="col-2">
                    Product Image
                </th>
                <th class="col-2">
                    Product Name
                </th>
                <th class="col-3">
                    Description
                </th>
                <th class="col-1">
                    Price
                </th>
                <th class="col-2">
                    Qty
                </th>
                <th class="col-1">
                    Total
                </th>
                <th class="col-1">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartList)
            {
                <tr>
                    <td class="col-2">
                        <img class="img-fluid img-responsive rounded product-image d-block" style="width:70%!important;" src="@item.Product.PrimaryImage"/>
                    </td>
                    <td class="col-3" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        @item.Product.ProductName
                    </td>
                    <td class="col-4" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        @item.Product.Description
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;font-size: 18px;vertical-align: middle;font-weight: 500;">
                        $@item.Product.SalePrice
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        <label>@item.Quantity</label>
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;vertical-align: middle;">
                        <a id="@("SalePrice" + @item.Id.ToString())" style="font-size: 18px;font-weight: 500;">$@(item.Product.SalePrice * item.Quantity)</a>
                    </td>
                </tr>
            }
            @if (Model.CartList.Count == 0 && Model.BuyNowProduct != null)
            {
                <tr>
                    <td class="col-2">
                        <img class="img-fluid img-responsive rounded product-image d-block" style="width:70%!important;" src="@Model.BuyNowProduct.PrimaryImage"/>
                    </td>
                    <td class="col-3" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        @Model.BuyNowProduct.ProductName
                    </td>
                    <td class="col-4" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        @Model.BuyNowProduct.Description
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;font-size: 18px;vertical-align: middle;font-weight: 500;">
                        $@Model.BuyNowProduct.SalePrice
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;font-size: 15px;vertical-align: middle;">
                        <label>@Model.Qty</label>
                    </td>
                    <td class="col-1" style="font-family: emoji;letter-spacing: 0px;vertical-align: middle;">
                        <a style="font-size: 18px;font-weight: 500;">$@(Model.BuyNowProduct.SalePrice * Model.Qty)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr/>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-2">
            <div class="row">
                <div>
                    <a>Subtotal</a>
                </div>
            </div>
            <div class="row mt-2">
                <div>
                    <a>Tax</a>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="row">
                <div>
                    <a id="Subtotal">$@(Model.Subtotal)</a>
                </div>
            </div>
            <div class="row mt-2">
                <div>
                    <a>@Model.Tax%</a>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-2">
            <div class="row mt-2">
                <div>
                    <a><b>Grand Total</b></a>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="row mt-2">
                <div>
                    <a><b>$@Model.Grandtotal</b></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-10"></div>
        <div class="col-2">
            @if (Model.CartList.Count == 0 && Model.BuyNowProduct != null)
            {
                <button type="button" id="placeorderbtn" onclick="PlaceOrder(@Model.BuyNowProduct.Barcode, @Model.Qty)" class="btn btn-block">Place Order</button>
            }
            else
            {
                <button type="button" id="placeorderbtn" onclick="PlaceOrder()" class="btn btn-block">Place Order</button>
            }
            
            <button type="button" disabled hidden id="processorderbtn" class="btn btn-block">Processing...</button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

       

    </script>
}

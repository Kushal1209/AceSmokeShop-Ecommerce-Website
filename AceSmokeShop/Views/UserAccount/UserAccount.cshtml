@using AceSmokeShop.ViewModel
@model AdminUserViewModel
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="placeholder"></div>
<div class="container-fluid" style="padding: 0rem 7rem;">
    <form asp-action="UserAccount" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <select asp-for=@Model.StateSelect.StateID id="stateList" class="form-control"
                            asp-items="@(new SelectList(@Model.StateList, "StateID", "StateName"))">
                    </select>
                </div>
                <div class="col-3">
                    <select asp-for=@Model.UserRole id="userRoles" class="form-control"
                            asp-items="@(new SelectList(@Model.UserRoleList))">
                    </select>
                </div>
                <div class="col-3">
                    <i class="fas fa-search"></i><input type="text" value=@Model.Search asp-for=@Model.Search id="searchUser" class="form-control form-input SearchIcon" placeholder="Search" />
                </div>
                <div class="col-2">
                    <button type="button" id="fliterbtnsearchUser" class="btn btn-block">Search</button>  
                </div>
            </div>
        </div>
    </form>

    <div class="mt-4">
        <div class="row">
            <div class="col-xl-2 col-lg-3">
                <div class="card l-bg-cherry">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Total Users</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                    @Model.TotalUsers
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3">
                <div class="card l-bg-blue-dark">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Active Users</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                    @Model.ActiveUsers
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3">
                <div class="card l-bg-green-dark">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Blocked Users</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                    @Model.BlockedUsers
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3">
                <div class="card l-bg-orange-dark">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Total Admins</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                    @Model.AdminUsers
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-1">
                <div class="card l-bg-orange-dark">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Total Vendors</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                    @Model.VendorUsers
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-1">
                <div class="card l-bg-orange-dark">
                    <div class="card-statistic-3 p-2">
                        <div class="mb-3">
                            <h6 class="card-title mb-0">Spam Users</h6>
                        </div>
                        <div class="row align-items-center mb-2 d-flex">
                            <div class="col-8">
                                <h5 class="d-flex align-items-center mb-0">
                                
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="userpage" class="mt-4">
        <div class="Paginationblock">
            <div class="row">
                <div class="col-md-4" style="padding: 5px 25px;">
                    <div class="form-group">
                        <label style="color: #000;">Rows</label>
                       <select asp-for=@Model.ItemsPerPage id="rowselectId" class="RowSelect"
                            asp-items="@(new SelectList(@Model.RowPerPage))">
                       </select>
                   </div>
                </div>
                <div class="col-md-4" style="padding: 7px 15px;">
                    <div style="text-align: center;">
                        <label style="color: #000;">Showing @Model.CurrentPage / @Model.TotalPages</label>
                    </div>
                </div>
                <div class="col-md-4" style="justify-content:end; padding: 5px 25px;">
                    <input type="hidden" id="cuttentpageid" value="@Model.CurrentPage" />
                    <input type="hidden" id="totalpageid" value="@Model.TotalPages" />
                    <div style="text-align: end;">
                        <button type="button" id="prebtnClick" hidden=@(Model.CurrentPage == 1? true : false) class="Paginationbtn">Previous</button>
                        <button type="button" id="nextbtnClick" hidden=@(Model.CurrentPage == Model.TotalPages? true : false) class="Paginationbtn">Next</button>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Name
                            </div>
                        </th>
                        <th class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Username
                            </div>
                        </th>
                        <th class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                State
                            </div>
                        </th>
                        <th  class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Contact
                            </div>
                        </th>
                        <th class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Roles
                            </div>
                        </th>
                        <th class="col-2">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Status
                            </div>
                        </th>
                        <th class="col-1">
                            <div class="h6 text-uppercase font-weight-bold" style="color: #145DA0;">
                                Actions
                            </div>
                        </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model.UserList)
                   {
                       <tr>
                           <td class="col-2">
                               <div>
                                   @item.Fullname
                               </div>
                           </td>
                           <td class="col-2">
                               <div>
                                   @item.UserName
                               </div>
                           </td>
                           <td class="col-2">
                               <div>@Model.StateList.Where(x => x.StateID == item.StateID).FirstOrDefault().StateName</div>
                           </td>
                           <td class="col-2">
                               <div>@item.Contact</div>
                           </td>
                           <td class="col-2">
                               <div>@item.UserRole</div>
                           </td>
                           <td class="col-2">
                               @if(item.LockoutEnabled == false){
                                    <a style="color: green"><b>Active</b></a>
                                }
                                else
                                {
                                    <a style="color: red"><b>Blocked</b></a>
                                }
                            </td>
                           <td class="col-1">
                               <div>
                                   <button type="button" class="d-inline" data-toggle="ajax-modal" data-target="#editUser"
                                        data-url="@Url.Action("EditUserAccount","UserAccount", new { Email = @item.Email } )" style="border:none; outline:none; background:none;">
                                        <i class="bi bi-pencil"></i>
                                   </button>
                               </div>
                           </td>
                       </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</div>

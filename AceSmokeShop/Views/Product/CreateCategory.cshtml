@using AceSmokeShop.ViewModel
@model AdminProductViewModel

@{
    ViewData["Title"] = "Add Category";
    Layout = null;
}

<div class="modal fade" id="addcategory" role="dialog" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addcategorylbl">Add Category</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true" style="border:none; outline:none">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateCategory" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group">
                        <div class="row row-cols row-cols-lg g-3 g-lg-3">
                            <div class="col-md-12">
                                <label asp-for="newcategory.CategoryName"></label>
                                <input type="text" asp-for="newcategory.CategoryName" class="form-control" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

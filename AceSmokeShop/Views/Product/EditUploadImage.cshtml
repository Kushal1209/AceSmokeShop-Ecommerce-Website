@model Product

@{
    ViewData["Title"] = "Add Images";
    Layout = null;
}

<div id="uploadProductImgs"></div>

<div class="modal fade" tabindex="-1" role="dialog" id="edituploadimgs">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edituploadimgslbl">Edit Product Images</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true" style="border:none; outline:none">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form method="post" asp-controller="Product" asp-action="EditUploadImage" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.ProductID" name="prodId"/>
                        <div class="form-group">
                            <div class="row row-cols row-cols-lg g-3 g-lg-3">
                                <div class="col-md-12">
                                    <label>Primary Img</label>
                                    <input type="file" name="primary" class="custom-file" />
                                </div>
                                <div class="col-md-12">
                                    <label>Secondary Img1</label>
                                    <input type="file" name="second" class="custom-file" />
                                </div>
                                <div class="col-md-12">
                                    <label>Secondary Img2</label>
                                    <input type="file" name="third" class="custom-file" />
                                </div>
                            </div>
                            <div class="col-md">
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    </script>
}


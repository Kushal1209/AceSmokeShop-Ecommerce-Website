@using AceSmokeShop.ViewModel
@model EditVendorOrderViewModel

@{
    ViewData["Title"] = "Delete Order Item";
    Layout = null;
}

<div class="modal fade" tabindex="-1" role="dialog" id="deletevendorOrder">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletevendorOrderlbl">Delete Order Item</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true" style="border:none; outline:none">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteVendorOrder" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <input type="hidden" asp-for=items />
                    <input type="hidden" asp-for=OrderId />
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <h5>Are you sure you want to delete Order?</h5>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block" data-save="modal">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    </script>
}

@using AceSmokeShop.ViewModel
@model AdminOrderDetailsViewModel

@if(Model.userOrder.IsVendor == true)
{
    <div class="row mt-5" style="width:90%; margin:0;" id="userorders">
        @if(Model.ShippingAddress == null)
        {
            <div class="product-card" style="width: 330px">
		        <div class="product-details"  style="padding: 1rem 2rem;">
                    <div class="row" style="padding:0px; margin: 0px;height: 2rem;">
                        <a style="border-radius: 0px;width: -webkit-fill-available;height: -webkit-fill-available; font-weight:600; color:#cdb36c;">Shipping</a>
			        </div>
                    <br/>
                    <div class="row" style="padding:0px; margin: 0px;height: 2rem;">
                        <a style="border-radius: 0px;width: -webkit-fill-available;height: -webkit-fill-available; font-weight:600;">Store Pickup</a>
			        </div>
                    <br/>
                </div>
	        </div>
        }
        else
        {
            <div class="col-4" style="padding:0px;">
                <div class="product-card" style="width: 330px">
                    <div class="product-details"  style="padding: 1rem 2rem;">
